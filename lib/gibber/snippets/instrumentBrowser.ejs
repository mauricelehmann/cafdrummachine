<html>
  <head>
    <title>Giblets by <%= user %></title>
    <style>
    body, html {
      -moz-box-sizing: border-box !important;
      box-sizing: border-box !important;
    }
  
    body {
      padding:0; margin:0;
      font-family:'Helvetica', sans-serif;
    }
  
    ul {
      list-style:none;
      padding:0;
      margin:0;
    }
  
    li { 
      width:100%; 
      border:#000 solid;
      border-width: 1px 0;  
      padding:0;
      margin:0;  
    }
  
    a { 
      text-decoration: none;
      font-size:2em; 
      color:#000;
      width:49%;
      margin:0;
      border:0;
      border-left:1px solid #000;
      padding:2em;
      display:inline-block;
      -moz-box-sizing: border-box !important;
      box-sizing: border-box !important;
    }
  
    .true {
      background: #000; 
      color:#fff !important;
    }
    .true a { color:#fff; }
    
    h1 { font-weight:normal; font-size:4em; margin-top:1em;}
    </style>
  </head>
  <body>
    <h1>Giblets by <%= user %></h1>
    <ul>
      <% for(var i=0; i< userfiles.length; i++) { %>
        <% if( userfiles[ i ] && userfiles[i].id.split('/')[2].length ) { %>
          <li <% if( userfiles[i].value.tags && userfiles[i].value.tags.indexOf('instrument') > -1 ) { %> class='true' <%  } %> >
            <a href="<%- './?path=' + user + '/publications/' + userfiles[i].id.split('/')[2] %>" >
              <%- userfiles[i].id.split('/')[2].split('*')[0] %>
            </a>
            <a href="<%- './?i=' + user + '/publications/' + userfiles[i].id.split('/')[2] %>" >
              <%- userfiles[i].id.split('/')[2].split('*')[0] %> as instrument
            </a>
          </li>
          <% } %>
      <% } %>
    </ul>
  </body>
</html>